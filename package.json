{
    "name": "lux",
    "displayName": "Lux",
    "description": "Language support for Lux",
    "version": "0.1.0",
    "publisher": "xq",
    "repository": {
        "type": "git",
        "url": "https://github.com/thomas992/lux-vscode"
    },
    "bugs": {
        "url": "https://github.com/thomas992/lux-vscode/issues"
    },
    "engines": {
        "vscode": "^1.22.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "contributes": {
        "languages": [
            {
                "id": "lux",
                "extensions": [
                    ".lux"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "lux",
                "scopeName": "source.lux",
                "path": "./syntaxes/lux.tmLanguage.json"
            }
        ]
    }
}
